<%= form_tag '/users', class: "account-form", method: :post do %>
  <% if @errors %>
    <%= render partial: '/errors', locals: { errors: @errors } %>
  <% end %>
  <div class="form-group-wrapper">
    <div class="form-group">
      <%= label_tag :first_name %>
      <%= text_field_tag :first_name, nil %>
    </div>
    <div class="form-group">
      <%= label_tag :last_name %>
      <%= text_field_tag :last_name, nil %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil %>
  </div>
  <%= submit_tag "Create an account", class: "btn btn-primary" %>
  <%= link_to 'Already have an account?', login_path %>
<% end %>
